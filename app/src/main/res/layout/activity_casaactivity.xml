<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.massa.luxvilla.Actividades.casaactivity"
    android:background="@color/background"
    style="@style/Infocasa"
    android:fitsSystemWindows="false">

    <android.support.design.widget.AppBarLayout
        android:layout_height="256dp"
        android:layout_width="match_parent"
        android:fitsSystemWindows="false"
        style="@style/Infocasa"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/tbinfocasaactivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Infocasa"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:minHeight="?attr/actionBarSize"
            app:statusBarScrim="?attr/colorPrimaryDark"
            app:contentScrim="?attr/colorPrimary"
            >

            <ImageView
                android:id="@+id/imginfocasaactivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="false"
                android:transitionName="elementimg"
                app:layout_collapseMode="parallax"
                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/barinfocasaactivity"
                android:layout_width="match_parent"
                android:fitsSystemWindows="false"
                android:minHeight="?attr/actionBarSize"
                android:layout_marginTop="25dp"
                android:layout_height="?attr/actionBarSize"
                android:gravity="top"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/card_background"
            android:background="@color/card_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:id="@+id/txtinfocasaactivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_primary"
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"/>

                <com.like.LikeButton
                    app:icon_type="star"
                    android:id="@+id/favbuttoncasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    app:anim_scale_factor="2"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

